datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

/* ----------  MODELS  ---------- */

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  pwHash    String
  createdAt DateTime @default(now())

  saves     Save[]
}

model Save {
  id        String   @id @default(uuid())

  /* relation back to User */
  user      User     @relation(fields: [userId], references: [id])
  userId    String

  /* game data */
  level     Int
  score     Int      @default(0)
  data      Json

  updatedAt DateTime @updatedAt

  @@unique([userId, level])      // one save per user per level
}
